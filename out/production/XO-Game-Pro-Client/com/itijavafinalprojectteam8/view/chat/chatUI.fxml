<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<AnchorPane id="AnchorPane" prefHeight="280.0" prefWidth="400.0" style="-fx-background-color: #2ec2a0;;"
            xmlns="http://javafx.com/javafx/8.0.202-ea" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.itijavafinalprojectteam8.view.chat.ChatUIController">
    <TextArea fx:id="ta" editable="false" prefHeight="200"
              style="-fx-background-color: rgb(255,255,255); -fx-font-size: 12px;" AnchorPane.leftAnchor="10.0"
              AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0"/>
    <TextField fx:id="tf" prefHeight="31.0" prefWidth="300.0" AnchorPane.bottomAnchor="20.0"
               AnchorPane.leftAnchor="10.0"/>
    <Button fx:id="sendBtn" mnemonicParsing="false" onAction="#onSendBtnClicked" text="Send"
            AnchorPane.bottomAnchor="20.0" AnchorPane.rightAnchor="20.0"/>
</AnchorPane>
