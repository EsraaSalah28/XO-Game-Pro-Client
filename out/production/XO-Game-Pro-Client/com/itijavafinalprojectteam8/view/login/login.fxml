<AnchorPane id="AnchorPane" prefHeight="500.0" prefWidth="800.0" style="-fx-background-color: #2ec2a0;"
            xmlns="http://javafx.com/javafx/8.0.202-ea" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.itijavafinalprojectteam8.view.login.LoginController">
    <children>
        <ImageView fitHeight="500" fitWidth="500" layoutX="336.0" layoutY="42.0" preserveRatio="true">
            <image>
                <Image url="@../resources/xobg.jpg"/>
            </image>
        </ImageView>
        <HBox alignment="CENTER_LEFT" layoutX="33.0" layoutY="202.0" prefHeight="35.0" prefWidth="321.0"
              style="-fx-border-color: #fff; -fx-background-radius: 5px; -fx-border-radius: 5px;">
            <children>
                <FontAwesomeIcon fontSmoothingType="LCD" glyphName="ENVELOPE" glyphStyle="-fx-fill:#fff" size="1.2em">
                    <HBox.margin>
                        <Insets/>
                    </HBox.margin>
                </FontAwesomeIcon>
                <TextField fx:id="emailAddressTF" prefHeight="33.0" prefWidth="294.0" promptText="Email Address"
                           style="-fx-background-color: transparent; -fx-prompt-text-fill: WHITE;" HBox.hgrow="ALWAYS">
                    <font>
                        <Font name="DejaVu Sans Condensed Bold" size="14.0"/>
                    </font>
                    <HBox.margin>
                        <Insets/>
                    </HBox.margin>
                    <opaqueInsets>
                        <Insets/>
                    </opaqueInsets>
                </TextField>
            </children>
            <opaqueInsets>
                <Insets left="10.0"/>
            </opaqueInsets>
            <padding>
                <Insets left="10.0"/>
            </padding>
        </HBox>

        <Label graphicTextGap="2.0" layoutX="113.0" layoutY="121.0" prefHeight="62.0" prefWidth="162.0"
               style="-fx-font-color: #fff; " text="Sign In" textFill="WHITE" textOverrun="CLIP">
            <font>
                <Font name="Caladea Bold" size="50.0"/>
            </font>
        </Label>
        <HBox alignment="CENTER_LEFT" layoutX="33.0" layoutY="256.0" prefHeight="35.0" prefWidth="321.0"
              style="-fx-border-color: #fff; -fx-background-radius: 5px; -fx-border-radius: 5px;">
            <padding>
                <Insets left="10.0"/>
            </padding>
            <children>
                <FontAwesomeIcon glyphName="LOCK" glyphStyle="-fx-fill:#fff" size="1.5em" text="ï€£">
                    <HBox.margin>
                        <Insets/>
                    </HBox.margin>
                </FontAwesomeIcon>
                <PasswordField fx:id="passwordPF" prefHeight="62.0" prefWidth="309.0" promptText="Password"
                               style="-fx-background-color: transparent;-fx-prompt-text-fill: WHITE;"
                               HBox.hgrow="ALWAYS">
                    <font>
                        <Font name="DejaVu Sans Condensed Bold" size="14.0"/>
                    </font>
                    <HBox.margin>
                        <Insets/>
                    </HBox.margin>
                </PasswordField>
            </children>
            <opaqueInsets>
                <Insets left="10.0"/>
            </opaqueInsets>
        </HBox>
        <JFXButton buttonType="RAISED" layoutX="33.0" layoutY="313.0" maxHeight="-Infinity" maxWidth="-Infinity"
                   minHeight="-Infinity" minWidth="-Infinity" onAction="#onLoginBtnClicked" prefHeight="35.0"
                   prefWidth="89.0" style="-fx-background-color: #41eac1; -fx-background-radius: 5px;" text="Login"
                   textAlignment="RIGHT" textFill="WHITE" textOverrun="CLIP">
            <font>
                <Font name="FreeSerif Bold" size="18.0"/>
            </font>
            <effect>
                <DropShadow blurType="GAUSSIAN" color="#1f8f75fc" height="93.11" offsetX="1.0" offsetY="2.0"
                            radius="29.61" width="27.33"/>
            </effect>
        </JFXButton>

        <Hyperlink layoutX="14.0" layoutY="510.0" onAction="#changeScreenHyperLink" text="New User? Register"
                   textFill="WHITE"/>

        <Pane fx:id="progressPane" visible="false" prefHeight="542.0" prefWidth="836.0"
              style="-fx-background-color: rgba(255,255,255,0.5);">
            <children>
                <ProgressIndicator layoutX="373.0" layoutY="245.0" maxHeight="69.0" maxWidth="75.0" prefHeight="69.0"
                                   prefWidth="75.0">
                    <effect>
                        <Blend/>
                    </effect>
                </ProgressIndicator>
            </children>
        </Pane>
        <!--        <Hyperlink layoutX="633.0" layoutY="463.0" text="forgot password?" textFill="WHITE" />-->
    </children>
</AnchorPane>
