<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane maxHeight="Infinity" maxWidth="Infinity" prefHeight="Infinity" prefWidth="Infinity"
            style="-fx-background-color: #2ec2a0;" xmlns="http://javafx.com/javafx/8.0.202-ea"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.itijavafinalprojectteam8.view.gamechooserscreen.GameChooserController">
    <Button fx:id="player" AnchorPane.leftAnchor="150" AnchorPane.topAnchor="220.0" mnemonicParsing="false"
            onAction="#clickOnPlayer"
            prefHeight="46.0" prefWidth="180.0" style="-fx-background-color: #fff;" text="Player"
            textFill="#2ec2a0">
        <font>
            <Font size="25.0"/>
        </font>
        <effect>
            <DropShadow/>
        </effect>
    </Button>
    <Button fx:id="computer" AnchorPane.leftAnchor="450.0" AnchorPane.topAnchor="220.0" mnemonicParsing="false"
            onAction="#clickOnComputer"
            prefHeight="46.0" prefWidth="180.0" style="-fx-background-color: #fff;" text="Computer"
            textFill="#2ec2a0">
        <font>
            <Font size="25.0"/>
        </font>
        <effect>
            <DropShadow/>
        </effect>
    </Button>
</AnchorPane>
